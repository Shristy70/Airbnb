<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <form action="/listings" method="POST" noValidate class="needs-validation">
                    <h2> Create New listings</h2><br>
                    <div class="mb-3">
                        <label for="title" class="form-label">Enter Title:</label>
                        <input type="text" name="listing[title]" placeholder="enter your title" class="form-control"
                            required>
                        <div class="valid-feedback">Title looks good</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label"> Please enter Description !</label>
                        <textarea name="listing[description]" id="" placeholder="your memories...." class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">please enter short description</div>
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Enter Image Url:</label>
                        <input type="text" name="listing[image]" class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Enter price:</label>
                            <input type="number" name="listing[price]" placeholder="1000" class="form-control" required>
                            <div class="invalid-feedback">Enter correct price</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Enter Country:</label>
                            <input type="text" name="listing[country]" placeholder="India" class="form-control">
                            <div class="invalid-feedback"> country name should be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Enter Location:</label>
                        <input type="text" name="listing[location]" placeholder="jaipur," class="form-control">
                        <div class="invalid-feedback">Enter correct location name</div>
                    </div>
                    <br>
                    <button class="btn btn-dark add-btn">add</button><br><br>
                </form><br>
            </div>
        </div>
    </body>
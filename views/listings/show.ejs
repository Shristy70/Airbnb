<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Listings :-</h2><br>
            <div class="card col-md-8">
                <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%=listing.title%>
                        </b>
                        <br>
                        <%=listing.description%>
                            <br>&#8377; <%=listing.price%>
                                <br>
                                <%=listing.location%><br>
                                    <%=listing.country%>
                    </p>
                </div>
            </div>

            <body>

        </div>
    </div>
    <div class="btns mb-4">

        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 editBtn">edit listing</a>


        <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST">
            <BUtton class="btn btn-dark offset-2 ">DLELTE</BUtton>
        </form>
    </div>
    </body>